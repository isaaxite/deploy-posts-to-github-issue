{
  "name": "isubo",
  "version": "0.0.11-alpha.11",
  "description": "deploy posts are written in markdown to github issue",
  "main": "index.js",
  "type": "module",
  "bin": {
    "isubo": "bin/index.js"
  },
  "scripts": {
    "test": "jest",
    "esm-test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "only-test": "./jest.js",
    "update-test-reports": "npm run esm-test && (git add ./reports && git commit -m 'chore: update test reports') || git checkout ./reports",
    "build": "rm -rf dist && rollup -c rollup.config.js && sed -i '1i#!/usr/bin/env node' dist/bin/index.js",
    "publish": "node scripts/npm.publish.js",
    "toc-for": "node ./scripts/toc-for.js",
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
    "postversion": "git push && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaaxite/deploy-posts-to-github-issue.git"
  },
  "keywords": [
    "markdown",
    "deploy",
    "issue",
    "issue-blog",
    "github",
    "blog",
    "local",
    "cli"
  ],
  "author": "isaaxite",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/isaaxite/deploy-posts-to-github-issue/issues"
  },
  "homepage": "https://github.com/isaaxite/deploy-posts-to-github-issue#readme",
  "dependencies": {
    "chalk": "^5.2.0",
    "fast-glob": "^3.2.12",
    "figlet": "^1.6.0",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "octokit": "^2.0.19",
    "ora": "^6.3.1",
    "progress": "^2.0.3",
    "prompts": "^2.4.2",
    "remark-frontmatter": "^4.0.1",
    "remark-parse": "^10.0.2",
    "remark-stringify": "^10.0.3",
    "simple-git": "^3.19.0",
    "spinnies": "^0.5.1",
    "unified": "^10.1.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@jest/globals": "^29.5.0",
    "@octokit/request": "^8.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.10.0",
    "markdown-toc": "^1.2.0",
    "msw": "^1.2.3",
    "nock": "^9.6.1",
    "node-fetch": "^3.3.2",
    "rollup": "^3.26.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0"
  }
}
